{
  "name": "jood-ng-modal",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start:demo": "ng serve demo",
    "build:jd-modal": "ng build jd-modal",
    "build:demo": "ng build demo",
    "watch": "ng build --watch --configuration development",
    "test": "ng test jd-modal",
    "test:watch": "ng test jd-modal --watch=true --code-coverage",
    "extract:report": "npx api-extractor run --local --verbose",
    "extract:doc": "npx api-documenter markdown --input-folder=./extract-report --output-folder=./extract-doc",
    "extract:cycle": "npm run build:jd-modal && npm run extract:report && npm run extract:doc",
    "package:build": "ng build jd-modal --prod",
    "package:test": "ng test jd-modal --code-coverage",
    "page:build": "ng build demo",
    "page:to-docs": "copyfiles -u 2 \"./dist/demo/**/*\" ./docs",
    "page:clear": "rm -rf docs",
    "page:expose": "npm run page:build && npm run page:to-docs",
    "ci:test": "ng test jd-modal --watch=false --code-coverage --browsers=ChromeHeadless",
    "ci:build": "npm run build:jd-modal",
    "ci:deploy-before": "npm run page:clear && npm run page:expose && npm run ci:build",
    "ci:deploy-pre-test": "npm run ci:test && npm run ci:deploy-before"
  },
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/material": "^12.2.13",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@jood/common": "^0.4.3",
    "csstype": ">=2",
    "ngx-highlightjs": "^6.1.0",
    "raw-loader": "^4.0.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.10",
    "@angular/cli": "~12.2.10",
    "@angular/compiler-cli": "~12.2.0",
    "@microsoft/api-documenter": "^7.13.67",
    "@microsoft/api-extractor": "^7.18.19",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "copyfiles": "^2.4.1",
    "csstype": "^3.0.9",
    "http-server": "^14.0.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^12.1.1",
    "typescript": "~4.3.5"
  }
}
